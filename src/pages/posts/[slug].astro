---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import BlogLayout from "@layouts/BlogLayout.astro";
import Formatter from "@utils/formatter";

import "@styles/blog-post.css";

export const getStaticPaths = (async () => {

  const blogPosts = await getCollection("blog");

  return blogPosts.map((blogPost) => ({
    params: { slug: blogPost.slug },
    props: { post: blogPost },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const frontmatter = post.data;
const { Content, headings } = await post.render();
---

<BlogLayout
  title={frontmatter.title}
  description="Lorem Ipsum dolor dolem"
  robots="index, follow"
>
  <p class="metaData">Author: {frontmatter.author}</p>
  <p class="metaData">Fecha: {Formatter.formatDate(frontmatter.date)}</p>

  <h3 class="subheading">Tabla de Contenidos</h3>

  <section id="content-data">
    {headings.map((heading, index) => (
      <a href={`#${heading.slug}`}>
        {index + 1} - {heading.text}
      </a>
    ))}
  </section>

  <Content />

  <div class="my-20 text-right">
    <a href="#btn-back">Ir arriba</a>
  </div>
</BlogLayout>