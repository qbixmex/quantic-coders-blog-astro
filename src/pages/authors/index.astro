---
import { getCollection } from "astro:content";
import siteConfig from "@config/site-config";
import MainLayout from "@layouts/MainLayout.astro";
import AuthorCard from "@components/AuthorCard.astro";

const authors = await getCollection("author");
---

<MainLayout
  title="Blog Authors"
  description="Quantic Coders author's blog"
  robots="noindex, nofollow"
>
  <section class="container px-6 py-10 mx-auto">
    <h1 class="heading">
      {siteConfig.title}
    </h1>

    <div class="divider"></div>

    <div class="text-right mb-10">
      <a
        class="text-sky-500 hover:underline hover:text-sky-600"
        href="/"
      >Back Home</a>
    </div>

    <section id="authors">
      {authors.map((author) => <AuthorCard author={author} />)}
    </section>
  </section>
</MainLayout>

<style is:global>
  #authors {
    @apply grid gap-5 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-4;
  }
  a {
    @apply text-blue-500 hover:underline;
  }
</style>